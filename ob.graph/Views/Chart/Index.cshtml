@{
    ViewBag.Title = "Chart";
}

<h2>Chart</h2>

<div id="spchart">
    <p>
        Parameter Width =   <input type="text" value="600" id="p1"/> px
    </p>
    <p>
        Parameter Height =   <input type="text" value="400" id="p2"/> px
    </p>
    <p>
   <input type="button" id="b1" value="Render Chart"/>
    </p>
    <script src="../Scripts/jquery.graph.js" type="text/javascript"></script>
    <script type="text/javascript">

        $('#b1').click(function (p) {
            var p1 = $('#p1').val();
            var p2 = $('#p2').val();
            var url = "/Chart/Graph/Customer--Name?width=" + p1 + "&height=" + p2;
            $('#chart').graph("pie", { url: url });
        });
    </script>
</div>

<div id="chart">

</div>
